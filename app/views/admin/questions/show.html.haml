- model_class = Question
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @question.title
%p
  %strong= model_class.human_attribute_name(:difficulty) + ':'
  %br
  = @question.difficulty
%p
  %strong= model_class.human_attribute_name(:questionable_type) + ':'
  %br
  = @question.questionable_type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_question_path(@question), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_question_path(@question), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
