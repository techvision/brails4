.col-md-4
  .container
  = simple_form_for [:admin, @content], :html => { :class => 'form-horizontal' } do |f|
    = f.input :title, input_html: { class: "form-control"}
    = f.input :summary, input_html: { class: "form-control"}, as: :text
    = f.input :transcript, input_html: { class: "form-control"}, as: :text
    = f.input :youtube_channel_url, input_html: {class: 'form-control'}
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_content_path(@content), :class => 'btn'
