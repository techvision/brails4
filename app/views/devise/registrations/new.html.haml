.form-signin
  %h2.form-signin-heading Sign up
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    .login-wrap
      = f.input :email, autofocus: true, label: false, input_html: {data: {'rule-email' => true, 'rule-required' => true}, class: 'form-control'}, placeholder: 'Email Address'
      = f.input :password, label: false, input_html: {class: 'form-control'}, placeholder: 'Password'
      = f.input :password_confirmation, label: false, input_html: {class: 'form-control'}, placeholder: 'Confirm Password']

      .submit
        = f.submit "Sign up", class: 'btn btn-lg btn-login btn-block'
      
      .forget
        = render "devise/shared/links"
